# Fish configuration for Karei
# Complete loading of all Fish components

# Load configuration modules
for file in $HOME/.config/fish/conf.d/*.fish
    source $file
end

# Load functions  
for file in $HOME/.config/fish/functions/*.fish
    source $file
end

# Load completions
for file in $HOME/.config/fish/completions/*.fish
    source $file
end

# Disable Fish greeting
set -g fish_greeting